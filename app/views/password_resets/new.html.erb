<h1><%= t('.reset_password') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with url: password_resets_path, scope: :author do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      <%= f.submit t('.submit'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>